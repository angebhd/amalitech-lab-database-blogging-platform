<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="amalitech.blog.controller.ProfileController"
            style="-fx-background-color: #f8f9fa;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <Button text="â† Back to Home" onAction="#handleBack"
                    style="-fx-background-color: transparent; -fx-text-fill: #667eea; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
            <Label text="My Profile" style="-fx-text-fill: #2c3e50;">
                <font>
                    <Font name="System Bold" size="20"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox alignment="CENTER" style="-fx-padding: 40;">
                <VBox spacing="30" maxWidth="700" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">

                    <!-- Profile Header -->
                    <VBox spacing="15" alignment="CENTER">
                        <Label text="ðŸ‘¤" style="-fx-font-size: 80px;"/>
                        <Label fx:id="usernameDisplayLabel" text="@username" style="-fx-text-fill: #667eea;">
                            <font>
                                <Font name="System Bold" size="20"/>
                            </font>
                        </Label>
                        <Label fx:id="joinDateLabel" text="Member since ..." style="-fx-text-fill: #6c757d;">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>
                    </VBox>

                    <Separator style="-fx-background-color: #dee2e6;"/>

                    <!-- Profile Stats -->
                    <HBox spacing="30" alignment="CENTER">
                        <VBox spacing="5" alignment="CENTER">
                            <Label fx:id="postsCountLabel" text="0" style="-fx-text-fill: #667eea;">
                                <font>
                                    <Font name="System Bold" size="24"/>
                                </font>
                            </Label>
                            <Label text="Posts" style="-fx-text-fill: #6c757d;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </Label>
                        </VBox>
                        <Separator orientation="VERTICAL" style="-fx-background-color: #dee2e6;"/>
                        <VBox spacing="5" alignment="CENTER">
                            <Label fx:id="commentsCountLabel" text="0" style="-fx-text-fill: #667eea;">
                                <font>
                                    <Font name="System Bold" size="24"/>
                                </font>
                            </Label>
                            <Label text="Comments" style="-fx-text-fill: #6c757d;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </Label>
                        </VBox>
                        <Separator orientation="VERTICAL" style="-fx-background-color: #dee2e6;"/>
                        <VBox spacing="5" alignment="CENTER">
                            <Label fx:id="reviewsCountLabel" text="0" style="-fx-text-fill: #667eea;">
                                <font>
                                    <Font name="System Bold" size="24"/>
                                </font>
                            </Label>
                            <Label text="Reviews" style="-fx-text-fill: #6c757d;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </Label>
                        </VBox>
                    </HBox>

                    <Separator style="-fx-background-color: #dee2e6;"/>

                    <!-- Error/Success Messages -->
                    <Label fx:id="errorLabel" managed="false" visible="false" wrapText="true"
                           style="-fx-background-color: #fee; -fx-text-fill: #c33; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #fcc; -fx-border-width: 1; -fx-border-radius: 8;">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Label>

                    <Label fx:id="successLabel" managed="false" visible="false" wrapText="true"
                           style="-fx-background-color: #d4edda; -fx-text-fill: #155724; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #c3e6cb; -fx-border-width: 1; -fx-border-radius: 8;">
                        <font>
                            <Font size="13"/>
                        </font>
                    </Label>

                    <!-- Profile Form -->
                    <VBox spacing="20">
                        <Label text="Profile Information" style="-fx-text-fill: #2c3e50;">
                            <font>
                                <Font name="System Bold" size="18"/>
                            </font>
                        </Label>

                        <VBox spacing="5">
                            <Label text="Username" style="-fx-text-fill: #2c3e50;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <TextField fx:id="usernameField" promptText="Username (max 12 chars)"
                                       style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </TextField>
                        </VBox>

                        <HBox spacing="15">
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="First Name" style="-fx-text-fill: #2c3e50;">
                                    <font>
                                        <Font name="System Bold" size="13"/>
                                    </font>
                                </Label>
                                <TextField fx:id="firstNameField" promptText="First name"
                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                    <font>
                                        <Font size="14"/>
                                    </font>
                                </TextField>
                            </VBox>

                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Last Name" style="-fx-text-fill: #2c3e50;">
                                    <font>
                                        <Font name="System Bold" size="13"/>
                                    </font>
                                </Label>
                                <TextField fx:id="lastNameField" promptText="Last name"
                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                    <font>
                                        <Font size="14"/>
                                    </font>
                                </TextField>
                            </VBox>
                        </HBox>

                        <VBox spacing="5">
                            <Label text="Email" style="-fx-text-fill: #2c3e50;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <TextField fx:id="emailField" promptText="Email address"
                                       style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </TextField>
                        </VBox>

                        <!-- Update Button -->
                        <Button text="Update Profile" onAction="#handleUpdateProfile" maxWidth="Infinity"
                                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 30; -fx-cursor: hand;">
                            <font>
                                <Font name="System Bold" size="15"/>
                            </font>
                        </Button>
                    </VBox>

                    <Separator style="-fx-background-color: #dee2e6;"/>

                    <!-- Change Password Section -->
                    <VBox spacing="20">
                        <Label text="Change Password" style="-fx-text-fill: #2c3e50;">
                            <font>
                                <Font name="System Bold" size="18"/>
                            </font>
                        </Label>

                        <VBox spacing="5">
                            <Label text="Current Password" style="-fx-text-fill: #2c3e50;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <PasswordField fx:id="currentPasswordField" promptText="Enter current password"
                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </PasswordField>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="New Password" style="-fx-text-fill: #2c3e50;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </PasswordField>
                        </VBox>

                        <VBox spacing="5">
                            <Label text="Confirm New Password" style="-fx-text-fill: #2c3e50;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </PasswordField>
                        </VBox>

                        <Button text="Change Password" onAction="#handleChangePassword" maxWidth="Infinity"
                                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 30; -fx-cursor: hand;">
                            <font>
                                <Font name="System Bold" size="15"/>
                            </font>
                        </Button>
                    </VBox>

                    <Separator style="-fx-background-color: #dee2e6;"/>

                    <!-- Danger Zone -->
                    <VBox spacing="15">
                        <Label text="Danger Zone" style="-fx-text-fill: #dc3545;">
                            <font>
                                <Font name="System Bold" size="18"/>
                            </font>
                        </Label>
                        <Label text="Once you delete your account, there is no going back. All your posts, comments, and reviews will be permanently deleted."
                               wrapText="true" style="-fx-text-fill: #6c757d;">
                            <font>
                                <Font size="14"/>
                            </font>
                        </Label>
                        <Button text="Delete Account" onAction="#handleDeleteAccount" maxWidth="Infinity"
                                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 30; -fx-cursor: hand;">
                            <font>
                                <Font name="System Bold" size="15"/>
                            </font>
                        </Button>
                    </VBox>

                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>