<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="amalitech.blog.controller.posts.PostDetailController"
            style="-fx-background-color: #f8f9fa;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <Button text="â† Back to Feed" onAction="#handleBack"
                    style="-fx-background-color: transparent; -fx-text-fill: #667eea; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="editButton" text="Edit Post" onAction="#handleEdit" managed="false" visible="false"
                    style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
            <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" managed="false" visible="false"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox alignment="CENTER" style="-fx-padding: 40;">
                <VBox spacing="30" maxWidth="800" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">

                    <!-- Post Header -->
                    <VBox spacing="15">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="ðŸ‘¤" style="-fx-font-size: 48;"/>
                            <VBox spacing="5">
                                <Label fx:id="authorLabel" text="John Doe" style="-fx-text-fill: #2c3e50;">
                                    <font>
                                        <Font name="System Bold" size="16"/>
                                    </font>
                                </Label>
                                <Label fx:id="dateLabel" text="Posted on ..." style="-fx-text-fill: #6c757d;">
                                    <font>
                                        <Font size="13"/>
                                    </font>
                                </Label>
                            </VBox>
                        </HBox>

                        <Label fx:id="titleLabel" text="Post Title" style="-fx-text-fill: #2c3e50;" wrapText="true">
                            <font>
                                <Font name="System Bold" size="32"/>
                            </font>
                        </Label>

                        <HBox fx:id="tagsContainer" spacing="10" alignment="CENTER_LEFT"/>

                        <Separator style="-fx-background-color: #dee2e6;"/>
                    </VBox>

                    <!-- Post Body -->
                    <Label fx:id="bodyLabel" text="Post content..." style="-fx-text-fill: #2c3e50; -fx-line-spacing: 5;" wrapText="true">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>

                    <!-- Post Actions -->
                    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 20 0 0 0;">
                        <Button text="Review" onAction="#handleReview"
                                style="-fx-background-color: #f8f9fa; -fx-text-fill: #667eea; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;">
                            <font>
                                <Font name="System Bold" size="14"/>
                            </font>
                        </Button>
                        <Label fx:id="reviewsLabel" text="0 Reviews" style="-fx-text-fill: #6c757d;">
                            <font>
                                <Font size="14"/>
                            </font>
                        </Label>
                    </HBox>

                    <Separator style="-fx-background-color: #dee2e6;"/>

                    <!-- Comments -->
                    <VBox spacing="20">
                        <Label text="Comments" style="-fx-text-fill: #2c3e50;">
                            <font>
                                <Font name="System Bold" size="20"/>
                            </font>
                        </Label>

                        <VBox spacing="10">
                            <TextArea fx:id="commentArea" promptText="Write a comment..." wrapText="true" prefHeight="80"
                                      style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </TextArea>
                            <HBox alignment="CENTER_RIGHT">
                                <Button text="Post Comment" onAction="#handlePostComment"
                                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;">
                                    <font>
                                        <Font name="System Bold" size="14"/>
                                    </font>
                                </Button>
                            </HBox>
                        </VBox>

                        <VBox fx:id="commentsContainer" spacing="15">
                            <!-- Comments added dynamically in controller -->
                        </VBox>
                    </VBox>

                </VBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>