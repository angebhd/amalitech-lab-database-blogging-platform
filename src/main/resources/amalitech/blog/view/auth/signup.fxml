<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="amalitech.blog.controller.auth.SignUpController"
            style="-fx-background-color: #f8f9fa;">

    <center>
        <VBox alignment="CENTER" style="-fx-padding: 40;">
            <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;">
                <VBox alignment="CENTER" spacing="25" maxWidth="500">

                    <!-- Card Container -->
                    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 3);">

                        <!-- Header -->
                        <VBox alignment="CENTER" spacing="10">
                            <Label text="B-BLOG" style="-fx-text-fill: #667eea;">
                                <font>
                                    <Font name="System Bold" size="36"/>
                                </font>
                            </Label>
                            <Label text="Create Account" style="-fx-text-fill: #2c3e50;">
                                <font>
                                    <Font name="System Bold" size="24"/>
                                </font>
                            </Label>
                            <Label text="Join our blogging community" style="-fx-text-fill: #6c757d;">
                                <font>
                                    <Font size="14"/>
                                </font>
                            </Label>
                        </VBox>

                        <!-- Error Label -->
                        <Label fx:id="errorLabel" managed="false" visible="false" wrapText="true"
                               style="-fx-background-color: #fee; -fx-text-fill: #c33; -fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #fcc; -fx-border-width: 1; -fx-border-radius: 8;">
                            <font>
                                <Font size="13"/>
                            </font>
                        </Label>

                        <!-- Form Fields -->
                        <VBox spacing="15">
                            <VBox spacing="5">
                                <Label text="Username" style="-fx-text-fill: #2c3e50;">
                                    <font>
                                        <Font name="System Bold" size="13"/>
                                    </font>
                                </Label>
                                <TextField fx:id="usernameField" promptText="Choose a username (max 12 chars)"
                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                    <font>
                                        <Font size="14"/>
                                    </font>
                                </TextField>
                            </VBox>

                            <HBox spacing="10">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="First Name" style="-fx-text-fill: #2c3e50;">
                                        <font>
                                            <Font name="System Bold" size="13"/>
                                        </font>
                                    </Label>
                                    <TextField fx:id="firstNameField" promptText="First name"
                                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                        <font>
                                            <Font size="14"/>
                                        </font>
                                    </TextField>
                                </VBox>

                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Last Name" style="-fx-text-fill: #2c3e50;">
                                        <font>
                                            <Font name="System Bold" size="13"/>
                                        </font>
                                    </Label>
                                    <TextField fx:id="lastNameField" promptText="Last name"
                                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                        <font>
                                            <Font size="14"/>
                                        </font>
                                    </TextField>
                                </VBox>
                            </HBox>

                            <VBox spacing="5">
                                <Label text="Email" style="-fx-text-fill: #2c3e50;">
                                    <font>
                                        <Font name="System Bold" size="13"/>
                                    </font>
                                </Label>
                                <TextField fx:id="emailField" promptText="Enter your email"
                                           style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                    <font>
                                        <Font size="14"/>
                                    </font>
                                </TextField>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Password" style="-fx-text-fill: #2c3e50;">
                                    <font>
                                        <Font name="System Bold" size="13"/>
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" promptText="Create a password"
                                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                    <font>
                                        <Font size="14"/>
                                    </font>
                                </PasswordField>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Confirm Password" style="-fx-text-fill: #2c3e50;">
                                    <font>
                                        <Font name="System Bold" size="13"/>
                                    </font>
                                </Label>
                                <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password"
                                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-border-radius: 8;">
                                    <font>
                                        <Font size="14"/>
                                    </font>
                                </PasswordField>
                            </VBox>
                        </VBox>

                        <!-- Signup Button -->
                        <Button text="Create Account" onAction="#handleSignup" maxWidth="Infinity"
                                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 30 12 30; -fx-cursor: hand;">
                            <font>
                                <Font name="System Bold" size="15"/>
                            </font>
                        </Button>

                        <!-- Divider -->
                        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0 10 0;">
                            <Separator HBox.hgrow="ALWAYS" style="-fx-background-color: #dee2e6;"/>
                            <Label text="OR" style="-fx-text-fill: #6c757d;">
                                <font>
                                    <Font size="12"/>
                                </font>
                            </Label>
                            <Separator HBox.hgrow="ALWAYS" style="-fx-background-color: #dee2e6;"/>
                        </HBox>

                        <!-- Login Link -->
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Already have an account?" style="-fx-text-fill: #6c757d;">
                                <font>
                                    <Font size="13"/>
                                </font>
                            </Label>
                            <Hyperlink text="Login" onAction="#handleGoToLogin" style="-fx-text-fill: #667eea; -fx-border-color: transparent;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Hyperlink>
                        </HBox>

                    </VBox>

                </VBox>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>