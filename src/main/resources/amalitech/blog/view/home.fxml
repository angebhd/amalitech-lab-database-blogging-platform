<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="amalitech.blog.controller.HomeController"
            style="-fx-background-color: #f8f9fa;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 30; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">

            <!-- Logo -->
            <Label text="B-BLOG" style="-fx-text-fill: #667eea;">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Search Bar -->
            <TextField fx:id="searchField" promptText="Search posts..." prefWidth="300"
                       style="-fx-background-color: #f8f9fa; -fx-background-radius: 20; -fx-padding: 8 15; -fx-border-color: transparent;">
                <font>
                    <Font size="14"/>
                </font>
            </TextField>

            <!-- Create Post Button -->
            <Button text="+ Create Post" onAction="#handleCreatePost"
                    style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>

            <!-- Profile Button -->
            <Button text="Profile" onAction="#handleProfile"
                    style="-fx-background-color: transparent; -fx-text-fill: #667eea; -fx-border-color: #667eea; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>

            <!-- Logout Button -->
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: #dc3545; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <HBox style="-fx-padding: 20;">

            <!-- Left Sidebar (Dynamic Tags) -->
            <VBox spacing="15" prefWidth="250" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                <Label text="Tags" style="-fx-text-fill: #2c3e50;">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Label>

                <Separator style="-fx-background-color: #dee2e6;"/>

                <!-- Dynamic Tag Buttons Container -->
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
                    <VBox fx:id="tagsButtonsContainer" spacing="8">
                        <!-- Tag buttons will be loaded dynamically from database -->
                    </VBox>
                </ScrollPane>
            </VBox>

            <!-- Feed Area -->
            <VBox spacing="20" HBox.hgrow="ALWAYS" style="-fx-padding: 0 20;">

                <!-- Feed Header -->
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="Your Feed" style="-fx-text-fill: #2c3e50;">
                        <font>
                            <Font name="System Bold" size="24"/>
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="sortComboBox" promptText="Sort by" prefWidth="150"
                              style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 8;">
                    </ComboBox>
                </HBox>

                <!-- Posts ScrollPane -->
                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
                    <VBox fx:id="postsContainer" spacing="15" style="-fx-padding: 5;">
                        <!-- Posts will be loaded dynamically from database -->
                    </VBox>
                </ScrollPane>

            </VBox>

        </HBox>
    </center>

</BorderPane>